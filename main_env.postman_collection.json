							"\r",
							"pm.test(\"Время ответа < 500мс\", () => {\r",
							"  pm.expect(pm.response.responseTime).to.be.below(500);\r",
							"});\r",
							"\r",
							"// Если проверка ещё идёт – повторяем тот же запрос\r",
							"if ([\"QUEUED\", \"RUNNING\"].includes(s.status)) {\r",
							"  postman.setNextRequest(\"GET Submission by id\"); // имя этого же запроса в коллекции\r",
							"} else {\r",
							"  // Проверяем финальное состояние\r",
							"  pm.test(\"Для завершённой проверки заполнен score и updatedAt\", () => {\r",
							"    pm.expect([\"PASSED\", \"FAILED\"]).to.include(s.status);\r",
							"    pm.expect(s.updatedAt).to.exist;\r",
							"    const created = new Date(s.createdAt);\r",
							"    const updated = new Date(s.updatedAt);\r",
							"    pm.expect(updated.getTime()).to.be.greaterThanOrEqual(created.getTime());\r",
							"    if (s.status === \"PASSED\") {\r",
							"      pm.expect(s.score).to.be.a(\"number\");\r",
							"    }\r",
							"  });\r",
							"  postman.setNextRequest(null); // останавливаем цепочку\r",
							"}\r",
